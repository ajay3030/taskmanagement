<configuration>
  <system.webServer>

    <!-- Tell IIS to use iisnode to run Node -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>

    <!-- Rewrite all requests to Node -->
    <rewrite>
      <rules>
        <rule name="Nodejs">
          <match url=".*"/>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>

    <!-- Logging for debugging -->
    <iisnode
      loggingEnabled="true"
      devErrorsEnabled="true"
    />

  </system.webServer>
</configuration>
